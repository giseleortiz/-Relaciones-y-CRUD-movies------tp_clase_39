<div class="col-12 col-sm-6 col-lg-3">// agregue para editar producto//
    <section class="product-box">
        <a href="/products/detail/<%= product.id %>">
            <figure class="product-box_image">
                <img src="/images/products/<%=product.image||'default-image.png'%>" alt="imagen de producto">
            </figure>
            <article class="product-box_data">
                <h2>$<%= toThousand((product.price - (product.price * product.discount) / 100).toFixed(0)) %></h2>
                <% if (product.discount) { %>
                    <span><%= product.discount %>% OFF</span>
                <% } %>
                <p><%= product.name %></p>
                <i class="fas fa-truck"></i>
            </article>
        </a>
    </section>
</div>