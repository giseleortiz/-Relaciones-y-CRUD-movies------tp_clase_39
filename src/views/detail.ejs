<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: name }) %>

	<body>
		<!-- Header -->
		<%- include('partials/headerNavbar') %>
			<!-- /Header -->

			<!-- product detail -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Detalle del producto: <%= name %>
						</h2>
					</div>
				</div>
				<div class="product-detail">
					<div class="row">
						<div class="col-12 col-lg-8">
							<img src="/images/products/<%= image || 'default-image.png' %>" alt="product image" class="product-detail-img">
							<p class="product-detail-description">
								<%= description %>
							</p>
						</div>
						<div class="col-12 col-lg-4">
							<article class="product-detail-info">
								<h2 class="product-detail-title">
									<%= name %>
								</h2>
								<% if (discount) { %>
									<p class="product-detail-price small">
										<span>$<%= toThousand(price) %></span>
										/
										<b>
											<%= discount %>% OFF
										</b>
									</p>
									<p class="product-detail-price">
										$<%= toThousand((price - (price * discount) / 100).toFixed(0)) %>
									</p>
									<% }else{ %>
										<p class="product-detail-price">
											$<%= toThousand(price) %>
										</p>
										<% } %>

											<ul class="actions-list">
												<li>
													<i class="fas fa-credit-card"></i>
													<p>Pag√° en 12 cuotas sin interes</p>
												</li>
												<li>
													<i class="fas fa-store"></i>
													<p>Retiro gratis en locales del vendedor</p>
												</li>
											</ul>

											<a href="#" class="buy-now-button">COMPRAR AHORA</a>
											<hr>

											<a href="/products/edit/<%= id %>" class="action-button edit">EDITAR
												PRODUCTO</a>

											<button class="action-button delete"
												data-bs-toggle="modal" data-bs-target="#warningRemoveModal<%= id %>">
												ELIMINAR
											</button>
											<%- include('./partials/modal-warning-delete-product-admin',{ id, name }) %>
							</article>
						</div>
					</div>
				</div>
			</div>
			<!-- /product detail -->

			<!-- footer -->
			<%- include('partials/footer') %>
				<!-- /footer -->
				<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
					integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
					crossorigin="anonymous"></script>
	</body>

</html>